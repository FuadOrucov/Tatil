@using Tatilll.Models.Sinifler
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/_AdminLayout.cshtml"; 
}
<h2>BLog Listesi</h2>
<br />

<table class="table table-bordered">
    <tr> 
        <td>ID</td>
        <td>BASLIQ</td>
        <td>SIl</td>
        <td>GUNCELLE</td>
        <td>DETAYLAR</td>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.ID</td>
            <td>@x.Baslik</td>
            <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-primary">Guncelle</a></td>
            <td> <a href="#" class="btn btn-group">Detaylar</a></td>

        </tr>
    }
    
</table>
<a href="/Admin/YeniBlog/" class="btn btn-warning">Blog Ekle</a>


